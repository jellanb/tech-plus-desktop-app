{
  "name": "kpv-desktop-app",
  "productName": "kpv-desktop-app",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build:styles": "npx tailwindcss -i src/assets/css/index.css -o src/assets/css/tailstyles.css --watch",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.techplus.myapp",
    "productName": "tech-plus",
    "files": [
      "dist/",
      "node_modules/",
      "package.json",
      "src/"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.1",
    "@electron-forge/maker-deb": "^7.3.1",
    "@electron-forge/maker-rpm": "^7.3.1",
    "@electron-forge/maker-squirrel": "^7.3.1",
    "@electron-forge/maker-zip": "^7.3.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.1",
    "@electron-forge/plugin-fuses": "^7.3.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3"
  },
  "keywords": [],
  "author": {
    "name": "Jellan Bozo",
    "email": "jellan.bozo0@walmart.com"
  },
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "bcrypt": "^5.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^10.0.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-serialport": "^3.0.0-alpha.4",
    "escpos-usb": "^3.0.0-alpha.4",
    "flowbite": "^2.5.1",
    "flowbite-datepicker": "^1.2.6",
    "fs": "^0.0.1-security",
    "joi": "^17.13.1",
    "postcss": "^8.4.38",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.10",
    "usb": "^1.8.0",
    "xlsx": "^0.18.5"
  }
}
